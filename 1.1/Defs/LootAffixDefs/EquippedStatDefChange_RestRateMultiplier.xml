<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <RimLoot.LootAffixDef>
        <defName>Slumbering</defName>
        <label>Slumbering</label>
        <groupName>EquippedStatDefChange_RestRateMultiplier</groupName>
        <modifiers>
            <li Class="RimLoot.LootAffixModifier_EquippedStatDefChange">
                <affectedStat>RestRateMultiplier</affectedStat>
                <valueModifier>
                    <addValue>0.15</addValue>
                </valueModifier>
            </li>
        </modifiers>
        <affixCost>2</affixCost>
        <affixRulePack>
            <rulesStrings>
                <li>possessive->Slumberer's</li>
                <li>adjective->Slumbering</li>
                <li>noun->Slumberer</li>
                <li>verb->Slumbering</li>
                <li>noun_is_singular->True</li>
            </rulesStrings>
        </affixRulePack>
    </RimLoot.LootAffixDef>

